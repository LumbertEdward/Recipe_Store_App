<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearFav"
    android:layout_margin="3dp"
    android:background="@color/back">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/back"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/mealImgFav"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:src="@drawable/flash6"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/titleMealFav"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Chicken chicken chicken"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp"
            android:layout_marginLeft="7dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/nunitobold"
            />
        <ImageView
            android:id="@+id/optionsItemsFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_toRightOf="@id/titleMealFav"
            />

    </RelativeLayout>


</LinearLayout>